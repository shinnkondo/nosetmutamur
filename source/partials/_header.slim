md-toolbar.md-default-theme[ng-init="isMenuOpen = false"]
  .pack
    .md-toolbar-tools
      - if current_path !~ /index\.html/
        = link_to 'Nos et Mutamur', '/index.html', :class => 'home-button'
      span[flex]
      .header-menu[uib-collapse="!isMenuOpen" layout="row"]
        md-button href="/#{t :lang}/about.html" About
        - alturl= current_page.data.alturl || translation(current_page.destination_path)
        - if alturl
          md-button class="textasis" href=alturl
            md-tooltip[md-delay="200"] 
              = current_page.data.altmsg || t(:theotherlangfull)
            md-icon[md-font-set="material-icons" ng-cloak] public
      button.lines-button.x[
          hide show-sm show-xs md-menu-origin type="button" 
          role="button" aria-label="Toggle Navigation" 
          ng-click="isMenuOpen = !isMenuOpen" ng-class="{close: isMenuOpen}"
        ]
        span.lines